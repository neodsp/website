---
import { Code } from "astro:components";
import type { Project } from "../content/projects";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class="project-card">
  <div class="project-header">
    <h3 class="project-name">{project.name}</h3>
    <span class="project-stars">&#9733; {project.stars}</span>
  </div>
  <p class="project-desc">{project.description}</p>
  <div class="project-tags">
    {project.tags.map((tag) => <span class="tag">{tag}</span>)}
  </div>
  <div class="code-window">
    <div class="code-window-chrome">
      <div class="code-dots">
        <span></span><span></span><span></span>
      </div>
      <span class="code-filename">{project.filename}</span>
    </div>
    <Code code={project.code} lang="rust" theme="one-dark-pro" />
  </div>
  <div class="project-links">
    <a href={project.github} target="_blank" rel="noopener noreferrer">github</a>
    <a href={project.crates} target="_blank" rel="noopener noreferrer">crates.io</a>
    <a href={project.docs} target="_blank" rel="noopener noreferrer">docs.rs</a>
  </div>
</article>
