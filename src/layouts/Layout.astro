---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "neodsp — Open-Source Rust Audio Libraries",
  description = "Real-time safe audio processing libraries for Rust. FFT convolution, audio I/O, device management, and more. Built by neodsp.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content="neodsp — Audio Algorithms for the Future" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://neodsp.com" />
    <link rel="canonical" href="https://neodsp.com" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
